			</div>
		</div>
	</div>
</div>

<script>
	let currentlyPlaying = null;

	document.querySelectorAll('.play-button').forEach(button => {
		button.addEventListener('click', () => {
			const audioId = button.getAttribute('data-audio');
			const audio = document.getElementById(audioId);
			
			if (currentlyPlaying && currentlyPlaying !== audio) {
				currentlyPlaying.pause();
				currentlyPlaying.currentTime = 0;
				currentlyPlaying.parentElement.querySelector('.play-button').textContent = '▶';
			}

			if (audio.paused) {
				audio.play();
				button.textContent = '⏸';
				currentlyPlaying = audio;
			} else {
				audio.pause();
				audio.currentTime = 0;
				button.textContent = '▶';
				currentlyPlaying = null;
			}
		});
	});
</script>

<style>
	.header {
		text-align: center;
		padding: 2rem;
		margin-top: 2rem;
	}

	h1 {
		font-family: 'Comic Sans MS', cursive;
		font-size: 3.5rem;
		color: #FF1493;
		text-shadow: 3px 3px 0 #FFD700;
		margin: 0;
	}

	h1 span {
		display: inline-block;
		animation: bounce 1s ease-in-out infinite;
		animation-delay: calc(var(--i) * 0.1s);
	}

	/* Apply different delays to each letter */
	h1 span:nth-child(1) { --i: 1; }
	h1 span:nth-child(2) { --i: 2; }
	h1 span:nth-child(3) { --i: 3; }
	h1 span:nth-child(4) { --i: 4; }
	h1 span:nth-child(5) { --i: 5; }
	h1 span:nth-child(6) { --i: 6; }
	h1 span:nth-child(7) { --i: 7; }
	h1 span:nth-child(8) { --i: 8; }
	h1 span:nth-child(9) { --i: 9; }
	h1 span:nth-child(10) { --i: 10; }
	h1 span:nth-child(11) { --i: 11; }
	h1 span:nth-child(12) { --i: 12; }
	h1 span:nth-child(13) { --i: 13; }
	h1 span:nth-child(14) { --i: 14; }
	h1 span:nth-child(15) { --i: 15; }
	h1 span:nth-child(16) { --i: 16; }
	h1 span:nth-child(17) { --i: 17; }
	h1 span:nth-child(18) { --i: 18; }
	h1 span:nth-child(19) { --i: 19; }
	h1 span:nth-child(20) { --i: 20; }
	h1 span:nth-child(21) { --i: 21; }
	h1 span:nth-child(22) { --i: 22; }
	h1 span:nth-child(23) { --i: 23; }

	@keyframes bounce {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}
	}

	.message {
		font-family: 'Comic Sans MS', cursive;
		line-height: 1.5;
	}

	.main-text {
		font-size: 2rem;
		color: #FF1493;
		animation: fadeIn 1s ease-in forwards;
		opacity: 0;
		margin: 0;
	}

	.subtext {
		font-size: 1.5rem;
		color: #FF69B4;
		margin-top: 0.5rem;
		opacity: 0;
		animation: fadeIn 1s ease-in 0.5s forwards;
	}

	.note {
		display: inline-block;
		color: #FFD700;
		font-size: 2.5rem;
		animation: wiggle 2s ease-in-out infinite;
		text-shadow: 2px 2px 0 #FF69B4;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes wiggle {
		0%, 100% {
			transform: rotate(0deg);
		}
		25% {
			transform: rotate(15deg);
		}
		75% {
			transform: rotate(-15deg);
		}
	}

	@media (max-width: 768px) {
		.main-text {
			font-size: 1.5rem;
			padding: 0 1rem;
		}

		.subtext {
			font-size: 1.2rem;
		}

		.note {
			font-size: 2rem;
		}
	}

	.song-list {
		display: flex;
		flex-direction: column;
		gap: 1.2rem;
		align-items: center;
		opacity: 0;
		animation: simpleFadeIn 1s ease-out 1.5s forwards;
	}

	.song-item {
		font-family: 'Comic Sans MS', cursive;
		font-size: 1.8rem;
		color: #FF1493;
		display: flex;
		align-items: center;
		gap: 1rem;
		position: relative;
	}

	.song-note {
		color: #FFD700;
		text-shadow: 2px 2px 0 #FF69B4;
	}

	.song-title {
		font-weight: bold;
		color: #FF1493;
	}

	.song-from {
		font-size: 1.4rem;
		font-style: italic;
		color: #FF69B4;
		margin-left: 0.5rem;
	}

	.play-button {
		background: #FF1493;
		color: white;
		border: 2px solid #FFD700;
		border-radius: 50%;
		width: 2.5rem;
		height: 2.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		transition: all 0.3s ease;
		font-size: 1rem;
		padding: 0;
		margin-left: 1rem;
		box-shadow: 2px 2px 0 #FFD700;
	}

	.play-button:hover {
		transform: scale(1.1);
		background: #FFD700;
		color: #FF1493;
		border-color: #FF1493;
		box-shadow: 2px 2px 0 #FF1493;
	}

	@keyframes simpleFadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@media (max-width: 768px) {
		.song-item {
			font-size: 1.4rem;
		}

		.song-from {
			font-size: 1.1rem;
		}

		.play-button {
			width: 2rem;
			height: 2rem;
			font-size: 0.8rem;
		}
	}
</style>
